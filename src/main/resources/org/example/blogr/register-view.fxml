<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.blogr.Controllers.RegisterController">
    <Label layoutX="52.0" layoutY="64.0" text="usrname" textFill="#f1eee7">
        <font>
            <Font name="Chiller" size="40.0" />
        </font>
    </Label>
    <TextField id="usernameField" fx:id="usernameField" layoutX="141.0" layoutY="61.0" prefHeight="24.0" prefWidth="400.0" promptText="choose a username" style="-fx-background-color: #F3F3F3; -fx-border-radius: 60px;">
        <font>
            <Font name="Chiller" size="24.0" />
        </font>
    </TextField>
    <Label layoutX="55.0" layoutY="125.0" text="email" textFill="#f1eee7">
        <font>
            <Font name="Chiller" size="40.0" />
        </font>
    </Label>
    <TextField id="emailField" fx:id="emailField" layoutX="141.0" layoutY="122.0" prefHeight="40.0" prefWidth="400.0" promptText="input a valid email" style="-fx-background-color: #F3F3F3;">
        <font>
            <Font name="Chiller" size="24.0" />
        </font>
    </TextField>
    <Label layoutX="55.0" layoutY="177.0" text="passwrd" textFill="#f1eee7">
        <font>
            <Font name="Chiller" size="40.0" />
        </font>
    </Label>
    <Label layoutX="51.0" layoutY="237.0" prefHeight="56.0" prefWidth="74.0" text="confrm" textFill="#f1eee7">
        <font>
            <Font name="Chiller" size="40.0" />
        </font>
    </Label>
    <PasswordField id="passwordField" fx:id="passwordField" layoutX="141.0" layoutY="185.0" prefHeight="40.0" prefWidth="400.0" promptText="choose a strong password" style="-fx-background-color: #F3F3F3;">
        <font>
            <Font name="Chiller" size="24.0" />
        </font>
    </PasswordField>
    <Button fx:id="registerButton" layoutX="141.0" layoutY="324.0" mnemonicParsing="false" onAction="#submitData" style="-fx-background-color: #F8D686;" text="registr">
        <font>
            <Font name="Chiller" size="21.0" />
        </font>
    </Button>
    <PasswordField fx:id="confirmPasswordField" layoutX="141.0" layoutY="247.0" prefHeight="40.0" prefWidth="400.0" promptText="confirm password" style="-fx-background-color: #F3F3F3;">
        <font>
            <Font name="Chiller" size="24.0" />
        </font>
    </PasswordField>
    <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../../icons/r.png" />
    </ImageView>
    <AnchorPane layoutX="227.0" layoutY="324.0" prefHeight="52.0" prefWidth="200.0">
        <Hyperlink fx:id="loginLink" layoutX="14.0" layoutY="14.0" onAction="#switchToLogin" text="already have an account? Log in" textFill="#f3f3f2" underline="true">
            <effect>
                <Glow />
            </effect>
        </Hyperlink>
    </AnchorPane>
    <Text fill="WHITE" layoutX="138.0" layoutY="34.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create a blogr account">
        <font>
          <Font name="Chiller" size="24.0" />
        </font>
    </Text>
</AnchorPane>
