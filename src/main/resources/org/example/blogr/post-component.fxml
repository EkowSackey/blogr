<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root id="background"
         fx:id="postComponent"
         prefHeight="193.0"
         prefWidth="200.0"
         stylesheets="@application.css"
         type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/25"
         xmlns:fx="http://javafx.com/fxml/1"
         >
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <AnchorPane fx:id="container" prefHeight="200.0" prefWidth="200.0">
        <Text fx:id="titleText" layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="title"/>
        <Text fx:id="authorText" layoutX="13.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="author"/>
        <Text fx:id="dateCreatedText" layoutX="13.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="date created"/>
        <Text fx:id="averageRatingText" layoutX="13.0" layoutY="99.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="avg rating"/>
        <Text fx:id="numberOfCommentsText" layoutX="17.0" layoutY="125.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="number of comments"/>
    </AnchorPane>
</fx:root>
