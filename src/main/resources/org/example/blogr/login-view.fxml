<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="background" minHeight="700" minWidth="700" stylesheets="@application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.blogr.Controllers.LoginController">
    <Label layoutX="93.0" layoutY="115.0" text="usrname or email" textFill="WHITE" />
    <Label layoutX="186.0" layoutY="184.0" text="passwrd" textFill="WHITE" />
    <Button fx:id="loginButton" layoutX="270.0" layoutY="255.0" mnemonicParsing="false" onAction="#submitData" text="Login" />
    <Text fill="WHITE" layoutX="189.0" layoutY="91.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign into your blogr account">
        <font>
          <Font name="Chiller" size="24.0" />
        </font>
    </Text>
    <Hyperlink fx:id="registerLink" layoutX="386.0" layoutY="269.0" onAction="#switchToRegister" text="don't have an account? Register" textFill="WHITE">
        <effect>
          <Glow />
        </effect>
    </Hyperlink>
    <TextField fx:id="usernameOrEmailField" layoutX="270.0" layoutY="112.0" prefWidth="400.0" promptText="email or username" stylesheets="@application.css">
        <font>
          <Font name="Chiller" size="24.0" />
        </font>
    </TextField>
    <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../../icons/r.png" />
    </ImageView>
   <PasswordField fx:id="passwordField" layoutX="270.0" layoutY="181.0" prefWidth="400.0" promptText="enter your password">
      <font>
         <Font name="Chiller" size="24.0" />
      </font>
   </PasswordField>
   <padding>
      <Insets bottom="50.0" left="100.0" right="50.0" top="100.0" />
   </padding>
</AnchorPane>
