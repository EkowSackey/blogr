        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="5.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="10.0">
            <Image url="@../../../icons/r.png" />
        </ImageView>
        <FontIcon iconColor="#323437" iconLiteral="fas-home" iconSize="24" layoutX="18.0" layoutY="140.0" onMouseClicked="#switchToHome" wrappingWidth="23.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.6" AnchorPane.topAnchor="100.0" />
        <FontIcon iconColor="#323437" iconLiteral="fas-search" iconSize="24" layoutX="18.0" layoutY="197.0" onMouseClicked="#switchToSearch" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="150.0" />
