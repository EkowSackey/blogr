        <FontIcon iconColor="#323437" iconLiteral="fas-user-astronaut" iconSize="24" layoutX="19.0" layoutY="370.0" onMouseClicked="#switchToProfile" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    </AnchorPane>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" pannable="true" HBox.hgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml">

    <AnchorPane id="background" stylesheets="@application.css">

            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <AnchorPane prefHeight="72.0" prefWidth="632.0">
                    <Button fx:id="backButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchToHome" text="Back" AnchorPane.leftAnchor="10.0" />
                    <Button fx:id="editButton" layoutX="102.0" layoutY="10.0" mnemonicParsing="false" onAction="#switchToEdit" text="Edit" AnchorPane.leftAnchor="80.0" />
                    <Button id="deleteButton" fx:id="deleteButton" layoutX="146.0" layoutY="10.0" mnemonicParsing="false" onAction="#deletePost" stylesheets="@application.css" text="Delete" textFill="WHITE" />
                </AnchorPane>
                <AnchorPane prefHeight="82.0" prefWidth="642.0">
                    <Label fx:id="postTitle" layoutX="20.0" text="Post Title" textFill="WHITE" />
                    <Text fill="WHITE" layoutX="20.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Author: ">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                    <Text fx:id="authorName" fill="WHITE" layoutX="84.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Author name">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                    <Text fill="WHITE" layoutX="195.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date Created: ">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                    <Text fx:id="dateCreated" fill="WHITE" layoutX="296.0" layoutY="58.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date Created">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                    <Text fill="WHITE" layoutX="447.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Last Update: ">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                    <Text fx:id="lastUpdate" fill="WHITE" layoutX="541.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Last Update:">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </Text>
                </AnchorPane>
                <WebView fx:id="webView" focusTraversable="false" prefHeight="516.0" prefWidth="642.0" VBox.vgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor></WebView>
                <AnchorPane fx:id="reviewPane" prefHeight="178.0" prefWidth="642.0">
                    <Slider fx:id="ratingSlider" blockIncrement="0.5" layoutX="155.0" layoutY="27.0" majorTickUnit="0.5" max="6.0" minorTickCount="0" prefHeight="38.0" prefWidth="272.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                    <Label layoutX="9.0" layoutY="6.0" text="Rate this post: " textFill="WHITE" />
                    <Label layoutX="14.0" layoutY="56.0" text="Add a comment" textFill="WHITE" />
                    <TextArea fx:id="commentArea" layoutX="14.0" layoutY="102.0" prefHeight="72.0" prefWidth="606.0" promptText="add a comment">
                        <font>
                            <Font name="Monospaced Regular" size="12.0" />
                        </font>
                    </TextArea>
                    <Button fx:id="sendReview" layoutX="555.0" layoutY="26.0" mnemonicParsing="false" onAction="#addReview" text="Send" />
                </AnchorPane>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <AnchorPane prefHeight="67.0" prefWidth="642.0">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                        <Label layoutX="5.0" layoutY="12.0" text="Comments: " textFill="WHITE" />
                        <Label layoutX="428.0" layoutY="12.0" text="Avg Rating:" textFill="WHITE" />
                        <Text fx:id="avgRating" fill="WHITE" layoutX="550.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
                            <font>
                                <Font name="Monospaced Regular" size="23.0" />
                            </font>
                        </Text>
                        <Text fx:id="commentCount" fill="WHITE" layoutX="110.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
                            <font>
                                <Font name="Monospaced Regular" size="23.0" />
                            </font>
                        </Text>
                    </AnchorPane>
                    <ListView fx:id="commentList" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </ListView>
                </VBox>
            </VBox>

    </AnchorPane>
    </ScrollPane>
</HBox>
